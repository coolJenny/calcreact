.container-fluid
	.header
		.col-md-3
			%h1 My first Calendar used React and Rails
		.col-md-6
			%h2 Appointments
		.col-md-3		
			%h3 Make a new appointment

	.body
		= form_for @appointment, remote: true do |f|
			= f.text_field :title
			= f.text_field :appt_time
			= f.submit 'Make appointment'

		#appointments
			= render 'appointments'

